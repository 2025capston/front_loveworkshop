<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBED"
    tools:context=".show_matchPeople">

    <!-- 기존의 LinearLayout 부분 -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="389dp"
        android:layout_height="541dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/pic_layout"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="364dp"
            android:layout_height="455dp"
            android:src="@drawable/saku" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/scd5"
            android:text="키:163cm  나이:28세  거리:1.5km"
            android:textAlignment="center"
            android:textSize="18dp" />
    </LinearLayout>

    <!-- 매칭 신청 버튼 -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/matchthisperson"
        android:layout_width="151dp"
        android:layout_height="53dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="36dp"
        android:textSize="22dp"
        android:background="@drawable/yes_btn"
        android:fontFamily="@font/scd4"
        android:text="매칭 신청"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <!-- 다음 이상형 버튼 -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextideal"
        android:layout_width="151dp"
        android:layout_height="53dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="40dp"
        android:textSize="22dp"
        android:background="@drawable/no_btn"
        android:fontFamily="@font/scd4"
        android:text="다음 이상형"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <!-- 하단 네비게이션 바 추가 -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_nav_menu"
        app:backgroundTint="#FBE2DE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
