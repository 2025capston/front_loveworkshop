<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBED"
    tools:context=".d_day">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="337dp"
        android:layout_height="200dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/mission_box"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView47"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/scd5"
            android:paddingTop="60dp"
            android:text="만남까지"
            android:textAlignment="center"
            android:textColor="#C9B4AF"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/countdown_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/scd5"
            android:paddingTop="20dp"
            android:text="00:00:00"
            android:textAlignment="center"
            android:textColor="@color/custom_brown"
            android:textSize="40sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView41"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:background="@drawable/eclipse"
        android:fontFamily="@font/alex"
        android:gravity="center"
        android:text="D - Day"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView48"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/scd5"
        android:text="상대방과 만날 수 있도록\n오늘의 옷차림을 알려주세요"
        android:textAlignment="center"
        android:textColor="@color/custom_brown"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

    <TextView
        android:id="@+id/textView49"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/scd4"
        android:text="*내 옷차림을 등록해야 상대의 옷을 확인할 수 있어요!"
        android:textColor="#C9B4AF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView48" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/choose_ootd"
        android:layout_width="300dp"
        android:layout_height="33dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_gra"
        android:fontFamily="@font/scd5"
        android:text="사진 등록하기"
        android:textColor="#7c5147"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView49" />


    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="332dp"
        android:layout_height="249dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/pic_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choose_ootd">

        <ImageView
            android:id="@+id/imagesetootd"
            android:layout_width="301dp"
            android:layout_height="185dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/pic_src" />
    </FrameLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/check_cloth"
        android:layout_width="334dp"
        android:layout_height="91dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/register_btn"
        android:fontFamily="@font/scd5"
        android:text="상대방 옷차림 확인하기"
        android:textColor="@color/custom_brown"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout2" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/second_nav_menu"
        app:backgroundTint="#FBE2DE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>