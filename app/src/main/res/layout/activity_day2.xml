<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBED"
    tools:context=".dayN_mission">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="337dp"
        android:layout_height="223dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/mission_box"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView44"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/scd6"
            android:paddingBottom="10dp"
            android:text="오늘의 미션"
            android:textAlignment="center"
            android:textColor="@color/custom_brown"
            android:textSize="30dp" />

        <View
            android:id="@+id/dottedLine2"
            android:layout_width="280dp"
            android:layout_height="3dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/dotted_line"
            app:layout_constraintEnd_toEndOf="@+id/textView44"
            app:layout_constraintStart_toStartOf="@+id/textView44"
            app:layout_constraintTop_toBottomOf="@+id/textView44" />

        <View
            android:layout_width="200dp"
            android:layout_height="2dp"
            android:background="@drawable/dot_line" />

        <TextView
            android:id="@+id/landom_mission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/scd5"
            android:layout_marginTop="35dp"
            android:textSize="20dp"
            android:text="내 인생 영화 or 드라마 공유"
            android:textAlignment="center"
            android:textColor="@color/custom_brown" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:background="@drawable/eclipse"
        android:fontFamily="@font/alex"
        android:gravity="center"
        android:text="D - 2"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ideal_answer"
        android:layout_width="337dp"
        android:layout_height="89dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/check_btn"
        android:fontFamily="@font/scd5"
        android:text="상대 답안 확인하기"
        android:textColor="@color/custom_brown"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <TextView
        android:id="@+id/textView45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/scd4"
        android:text="*내 답을 등록하면 상대의 답을 확인할 수 있어요!"
        android:textColor="#C9B4AF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ideal_answer" />

    <EditText
        android:id="@+id/mission_text"
        android:layout_width="337dp"
        android:layout_height="89dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/mission_box"
        android:ems="10"
        android:textSize="20dp"
        android:gravity="center"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView45" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/input_mission"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/register_btn"
        android:fontFamily="@font/scd5"
        android:text="등록하기"
        android:textColor="@color/custom_brown"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mission_text" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/second_nav_menu"
        app:backgroundTint="#FBE2DE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>